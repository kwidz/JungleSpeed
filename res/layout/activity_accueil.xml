<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/scores1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jouer"
        android:layout_below="@+id/jouer"
        android:onClick="naviguerScores"
        android:text="Scores" />

    <Button
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scores1"
        android:layout_below="@+id/scores1"
        android:layout_marginTop="16dp"
        android:text="CrÃ©dits" />

    <Button
        android:id="@+id/jouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="naviguerJouer"
        android:text="Jouer" />

    <Button
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/credit"
        android:layout_below="@+id/credit"
        android:layout_marginTop="24dp"
        android:text="photo"
        android:onClick="naviguerPhoto" />

</RelativeLayout>
